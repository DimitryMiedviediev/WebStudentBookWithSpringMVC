<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://127.0.0.1:3306/HibTestUnlistDB?characterEncoding=utf8&amp;createDatabaseIfNotExist=true&amp;useSSL=false&amp;useUnicode=yes</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <property name="connection.username">root</property>
        <property name="connection.password"></property>
        <property name="dialect">uni.db.project.filter.CustomMySQLDialect</property>
        <property name="show_sql">true</property>
        <property name="current_session_context_class">thread</property>

        <mapping class="uni.db.project.entity.User"/>
        <mapping class="uni.db.project.entity.University"/>
        <mapping class="uni.db.project.entity.Faculty"/>
        <mapping class="uni.db.project.entity.Speciality"/>
        <mapping class="uni.db.project.entity.group.Group"/>
        <mapping class="uni.db.project.entity.group.parameters.GroupEducationForm"/>
        <mapping class="uni.db.project.entity.group.parameters.GroupQualificationLevel"/>
        <mapping class="uni.db.project.entity.group.parameters.GroupStatus"/>
        <mapping class="uni.db.project.entity.group.Psevdogroup"/>


        <mapping class="uni.db.project.entity.student.Student"/>
        <mapping class="uni.db.project.entity.student.parameters.StudentStatus"/>
        <mapping class="uni.db.project.entity.student.parameters.StudentFinancing"/>
        <mapping class="uni.db.project.entity.student.parameters.StudentSubgroup"/>


        <mapping class="uni.db.project.entity.order.Order"/>
        <mapping class="uni.db.project.entity.order.parameters.OrderType"/>
    </session-factory>
</hibernate-configuration>